<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutEmpty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/shape_card"
    style="@style/AppTheme.Layout.Parent">

    <ProgressBar
        android:id="@+id/progressLoader"
        android:layout_width="@dimen/button_radius_circle_small"
        android:layout_height="@dimen/button_radius_circle_small"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_marginTop="@dimen/component_super"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:targetApi="lollipop" />

    <com.ismealdi.dactiv.components.AmTextView
        android:id="@+id/textLoader"
        app:AmFont="R"
        android:gravity="top|center_horizontal"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/colorTextNormal"
        android:layout_width="match_parent"
        style="@style/AppTheme.Layout.Parent.Small"
        android:paddingLeft="@dimen/component_small"
        android:paddingRight="@dimen/component_small"
        android:layout_marginTop="@dimen/component_super"
        app:layout_constraintTop_toBottomOf="@id/progressLoader"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/component_super"
        android:layout_height="0dp"/>

</android.support.constraint.ConstraintLayout>